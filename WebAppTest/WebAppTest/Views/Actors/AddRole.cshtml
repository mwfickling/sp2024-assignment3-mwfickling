@model mwfickling_MVC_Assingment3.Models.ActorMovieVM;

@{
    ViewData["Title"] = "Add Role";
}

<h1>Add a New Casting Role</h1>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
@*                    <label asp-for="ActorId" class="control-label">What actor plays this character?</label>
*@                    <input type="hidden" asp-for="ActorId" class ="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="MovieId" class="control-label">What movie is this character in?</label>
                    <select asp-for="MovieId" class ="form-control" asp-items="Model.MovieItems"></select>
                </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Add Role" class="btn btn-danger" />
                    <br /><br />
                    &larr; <a class="back-anchor" asp-action="Index">Back to Actors</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
